{
    "settingsPage": {
    "sections": [
      {
        "title": "Graphics Settings",
        "controls": [
          {
            "type": "TextBox",
            "title": "Framerate Limit",
            "description": "Set a custom FPS cap. Use -1 to reset to the default 60 FPS cap",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/int[@name='FramerateCap']",
              "dataType": "int"
            }
          },
          {
            "type": "Slider",
            "title": "Start Quality",
            "description": "Adjust how many bars of quality to have on game join.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 10.0,
            "step": 1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/token[@name='SavedQualityLevel']",
              "dataType": "token"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Fullscreen",
            "description": "Start Roblox in fullscreen mode.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='Fullscreen']",
              "dataType": "bool"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Max Quality",
            "description": "Supposedly sets MSAA to 4 or 6.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='MaxQualityEnabled']",
              "dataType": "bool"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Vignette",
            "description": "Toggle Roblox vignette.",
            "value": "",
            "gbsConfig": {
              "xmlPaths": [
                "{UserSettings}/bool[@name='VignetteEnabled']",
                "{UserSettings}/bool[@name='VignetteEnabledCustomOption']"
              ],
              "dataType": "bool"
            }
          }
        ]
      },
      {
        "title": "Audio Settings",
        "controls": [
          {
            "type": "Slider",
            "title": "Master Volume",
            "description": "Adjust the global volume.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 1.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='MasterVolume']",
              "dataType": "float"
            }
          },
          {
            "type": "Slider",
            "title": "Studio Master Volume",
            "description": "Adjust the Roblox Studio global volume.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 1.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='MasterVolumeStudio']",
              "dataType": "float"
            }
          },
          {
            "type": "Slider",
            "title": "Party Voice Volume",
            "description": "Adjust the party mode volume.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 1.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='PartyVoiceVolume']",
              "dataType": "float"
            }
          }
        ]
      },
      {
        "title": "Input Settings",
        "controls": [
          {
            "type": "TextBox",
            "title": "Camera Sensitivity",
            "description": "Set the camera sensitivity amount.",
            "value": "",
            "minValue": 0.1,
            "maxValue": 5.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='GamepadCameraSensitivity']",
              "dataType": "float"
            }
          },
          {
            "type": "Vector2",
            "title": "First Person Mouse Sensitivity",
            "description": "Adjusts the X/Y sensitivity in first person mode.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/Vector2[@name='MouseSensitivityFirstPerson']",
              "dataType": "vector2"
            }
          },
          {
            "type": "Vector2",
            "title": "Third Person Mouse Sensitivity",
            "description": "Adjusts the X/Y sensitivity in third person mode.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/Vector2[@name='MouseSensitivityThirdPerson']",
              "dataType": "vector2"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Invert Camera Y",
            "description": "Invert the Y axis for camera control.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='CameraYInverted']",
              "dataType": "bool"
            }
          },
          {
            "type": "Slider",
            "title": "Haptic Strength",
            "description": "Adjust the strength of haptic feedback.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 1.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='HapticStrength']",
              "dataType": "float"
            }
          }
        ]
      },
      {
        "title": "Accessibility",
        "controls": [
          {
            "type": "Slider",
            "title": "UI Transparency",
            "description": "Adjust the transparency of the Roblox UI. A value of 1 makes it semi-transparent, while 0 makes it fully opaque.",
            "value": "",
            "minValue": 0.0,
            "maxValue": 1.0,
            "step": 0.1,
            "gbsConfig": {
              "xmlPath": "{UserSettings}/float[@name='PreferredTransparency']",
              "dataType": "float"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Reduced Motion",
            "description": "Reduces the amount of animation Roblox uses.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='ReducedMotion']",
              "dataType": "bool"
            }
          },
          {
            "type": "ComboBox",
            "title": "Preferred Text Size",
            "description": "Adjust the size of the text.",
            "value": "",
            "options": [
              { "value": "1", "displayName": "Small" },
              { "value": "2", "displayName": "Medium" },
              { "value": "3", "displayName": "Large" },
              { "value": "4", "displayName": "Extra Large" }
            ],
            "gbsConfig": {
              "xmlPath": "{UserSettings}/token[@name='PreferredTextSize']",
              "dataType": "token"
            }
          }
        ]
      },
      {
        "title": "Miscellaneous Settings",
        "controls": [
          {
            "type": "ToggleSwitch",
            "title": "Show Performance Stats",
            "description": "Enable the in-game performance statistics overlay.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='PerformanceStatsVisible']",
              "dataType": "bool"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Chat Translation",
            "description": "Enable automatic chat translation.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='ChatTranslationEnabled']",
              "dataType": "bool"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "Chat Translation FTUX Shown",
            "description": "Indicates if the First-Time Experience Tutorial has been shown.",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='ChatTranslationFTUXShown']",
              "dataType": "bool"
            }
          },
          {
            "type": "ToggleSwitch",
            "title": "VR Enabled",
            "description": "Toggle VR mode on or off",
            "value": "",
            "gbsConfig": {
              "xmlPath": "{UserSettings}/bool[@name='VREnabled']",
              "dataType": "bool"
            }
          }
        ]
      }
    ]
  }
}